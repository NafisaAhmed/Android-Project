<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"


    android:background="@drawable/menu"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/ivProfileId"
        android:src="@drawable/user1"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        />


    <EditText
        android:id="@+id/signUpNameEditTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="20sp"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColorHint="#F08080"
        android:textColor="#FFFFFF"


        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="20sp"
        android:id="@+id/signUpPhoneEditTextId"
        android:inputType="textPhonetic"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:hint="Mobile Number"
        android:textColorHint="#F08080"
        android:textColor="#FFFFFF"


        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="20sp"
        android:id="@+id/signUpEmailEditTextId"
        android:inputType="textEmailAddress"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:hint="Email"
        android:textColorHint="#F08080"
        android:textColor="#FFFFFF"


        />
    <EditText
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signUpPasswordEditTextId"
        android:inputType="textPassword"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:hint="Password"
        android:textColorHint="#F08080"
        android:textColor="#FFFFFF"


        />

    <Button
        android:id="@+id/signUpButtonId"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_marginTop="20dp"
        android:text="Sign Up" />
    <TextView
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"

        android:id="@+id/signInTextViewId"
        android:textColor="#b90260"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:text="Already a Member?Sign In"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/progressBarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />





</LinearLayout>